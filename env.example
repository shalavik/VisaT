# VisaT Environment Configuration

# Flask Configuration
SECRET_KEY=your-secret-key-here
HOST=0.0.0.0
PORT=5000
FLASK_DEBUG=False

# Google Form
GOOGLE_FORM_URL=https://forms.gle/your-form-url

# WhatsApp Mode Selection
WHATSAPP_MODE=business  # Options: 'business' or 'personal'

# WhatsApp Business API (for business mode)
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token

# WhatsApp Personal Mode (for personal mode)
WHATSAPP_CHROME_PROFILE_PATH=./chrome-session
WHATSAPP_POLL_INTERVAL=5
WHATSAPP_HEADLESS=false

# WhatsApp Auto-Reply Templates
WHATSAPP_AUTO_REPLY_TEMPLATE=default  # Options: default, enhanced, conversational, conversion
WHATSAPP_TEMPLATE_CONSULTANT_NAME=Slava
WHATSAPP_RESPONSE_COOLDOWN=300  # 5 minutes in seconds
WHATSAPP_SESSION_BACKUP_ENABLED=true

# Facebook Messenger
FACEBOOK_VERIFY_TOKEN=your-facebook-verify-token

# Gmail API
GMAIL_SENDER_EMAIL=noreply@visat.com
GMAIL_SENDER_NAME=VisaT Team

# Google Sheets
GOOGLE_SHEETS_ID=your-spreadsheet-id

# Calendly
CALENDLY_ACCESS_TOKEN=your-calendly-token
CALENDLY_EVENT_TYPE_UUID=your-event-type-uuid
CALENDLY_STATIC_LINK=https://calendly.com/visat-consultation

# Optional: Error Reporting
SENTRY_DSN=your-sentry-dsn-for-error-tracking
